<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.nowcoder.toutiao.dao.CommentDAO">
    <sql id="table">comment</sql>
    <sql id="selectFields">id,fromid,toid,content,conversation_id,created_date</sql>
    <insert id="addComment" parameterType="com.nowcoder.toutiao.model.Comment">
        insert into <include refid="table"/>(content,user_id,created_date,news_id) values (#{content},#{userId},#{createdDate},#{newsId})
    </insert>

    <select id="selectById" parameterType="int" resultType="com.nowcoder.toutiao.model.Comment">
        select <include refid="selectFields"/>
        from <include refid="table"/>
        where id=#{id}
        order by id desc
    </select>
</mapper>